    private void jTextField1KeyTyped(java.awt.event.KeyEvent evt) {                                     
        if(!isNumber(evt.getKeyChar()))
            evt.consume();
    }                                    

    private void jTextField1KeyPressed(java.awt.event.KeyEvent evt) {                                       
        if(evt.isControlDown() && evt.getKeyCode() == KeyEvent.VK_V)
        {
            Clipboard clipboard = Toolkit.getDefaultToolkit().getSystemClipboard();
            DataFlavor flavor = DataFlavor.stringFlavor;
            String schowek = "";
            
            try 
            {
                schowek = (String)clipboard.getData(flavor);
            }
            catch (UnsupportedFlavorException ex) 
            {
                System.out.println("This is not string");
            } 
            catch (IOException ex) 
            {
                System.out.println("There is an erron in I/O");
            }
            
            for (int i = 0; i < schowek.length(); i++)
                if(!isNumber(schowek.charAt(i)))
                {
                    evt.consume();
                    break;
                }            
            
        }
    }                                      

    private boolean isNumber(char ch)
    {
        if(ch >= '0' && ch <= '9') 
            return true;
        
        
        
        return false;
    }
